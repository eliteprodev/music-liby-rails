<div class="col col s12 m6 l3">
  <article class="card-panel hoverable">
    <p><h2><%= link_to artist.name, artist %></h2>
    </p>
    <p>Artist birthday:
      <%= artist.birthday %></p>
      <p><%= link_to artist_path(artist) do %>
          <%= image_tag artist.artistpicture, style: "width:100%;" %>
          <% end %></p>
<span class="grey lighten-5"><%= link_to "Edit", edit_artist_path(artist) %></span>  |  <span class="red lighten-5"><%= link_to "Destroy", artist_path(artist), method: :delete %></span>
</article>
</div>
